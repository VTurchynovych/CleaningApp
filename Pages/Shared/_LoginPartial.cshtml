@using Microsoft.AspNetCore.Identity
@using CleaningApp.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="d-flex align-items-center gap-3">
    @if (SignInManager.IsSignedIn(User))
    {
        <a id="manage" class="btn btn-light rounded-pill border-0 d-flex align-items-center gap-2 px-3 py-1 shadow-sm"
           asp-area="Identity" asp-page="/Account/Manage/Index" title="Zarz¹dzaj kontem"
           style="background: rgba(255,255,255,0.1); color: white;">

            <div class="bg-white text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 24px; height: 24px;">
                <i class="bi bi-person-fill" style="font-size: 0.8rem;"></i>
            </div>

            <span class="fw-bold small">@UserManager.GetUserName(User)</span>
        </a>

        <form id="logoutForm" class="form-inline m-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-link text-white-50 text-decoration-none fw-bold d-flex align-items-center gap-1 hover-white">
                <i class="bi bi-box-arrow-right"></i> Wyloguj
            </button>
        </form>
    }
    else
    {
        <a class="nav-link text-white fw-bold small" id="register" asp-area="Identity" asp-page="/Account/Register">
            Rejestracja
        </a>

        <a class="btn btn-light text-primary rounded-pill px-4 shadow-sm fw-bold border-0" id="login" asp-area="Identity" asp-page="/Account/Login">
            Zaloguj siê
        </a>
    }
</div>

<style>
    .hover-white:hover {
        color: white !important;
        text-shadow: 0 0 5px rgba(255,255,255,0.5);
    }
</style>