@using Microsoft.AspNetCore.Identity
@using CleaningApp.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager NavigationManager

<AuthorizeView>
    <Authorized>
        <div class="nav-item">
            <span class="nav-link text-dark">Witaj, @context.User.Identity?.Name!</span>
        </div>
        <div class="nav-item">
            <form action="Identity/Account/Logout" method="post">
                <AntiforgeryToken />
                <button type="submit" class="nav-link btn btn-link">Wyloguj</button>
            </form>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="nav-item">
            <a class="nav-link" href="Account/Register" data-enhance-nav="false">Rejestracja</a>
        </div>
        <div class="nav-item">
            <a class="nav-link" href="Account/Login" data-enhance-nav="false">Zaloguj</a>
        </div>
    </NotAuthorized>
</AuthorizeView>