    {
        topReviews = await _orderService.GetTopReviewsAsync();

        displayReviews = new List<Order>();
        if (topReviews != null) displayReviews.AddRange(topReviews);

        if (displayReviews.Count < 3)
        {
            AddMockReviews();
        }
    }

