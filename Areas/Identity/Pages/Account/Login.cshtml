@page "/Account/Login"
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-white text-center py-4 border-0">
                    <h3 class="font-weight-bold text-primary">Witaj ponownie!</h3>
                    <p class="text-muted small mb-0">Zaloguj się, aby kontynuować</p>
                </div>
                <div class="card-body p-5 pt-0">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Adres Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Hasło" />
                            <label asp-for="Input.Password" class="form-label">Hasło</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                                    Zapamiętaj mnie
                                </label>
                            </div>
                        </div>

                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary fw-bold mb-3">Zaloguj się</button>

                        
                    </form>

                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <div class="d-flex align-items-center my-4">
                            <hr class="flex-grow-1">
                            <span class="mx-3 text-muted small">LUB</span>
                            <hr class="flex-grow-1">
                        </div>

                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-dark w-100 mb-2" name="provider" value="@provider.Name">
                                    Zaloguj przez @provider.DisplayName
                                </button>
                            }
                        </form>
                    }
                </div>

                <div class="card-footer text-center py-3 bg-light border-0 rounded-bottom">
                    <div class="small">
                        Nie masz jeszcze konta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold">Zarejestruj się teraz</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}